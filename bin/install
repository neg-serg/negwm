#!/usr/bin/env dash

negwm_git_clone() {
    if ! which git > /dev/null; then
        echo "You need install git to continue"
        exit 1
    fi
    git clone https://github.com/neg-serg/negwm
}

deps_install() {
    echo "Install..."
    pip install .
}

negwm_install() {
    if which pip3 > /dev/null; then
        deps_install
    else
        echo 'You need pip for python3 to install negwm'
    fi
}

negwm_git_clone
negwm_install
